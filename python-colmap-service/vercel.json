{
  "version": 2,
  "name": "domapping-colmap-service",
  "description": "DoMapping COLMAP 3D Reconstruction Microservice",
  "builds": [
    {
      "src": "main.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9"
      }
    }
  ],
  "routes": [
    {
      "src": "/docs",
      "dest": "/main.py"
    },
    {
      "src": "/redoc", 
      "dest": "/main.py"
    },
    {
      "src": "/openapi.json",
      "dest": "/main.py"
    },
    {
      "src": "/health",
      "dest": "/main.py"
    },
    {
      "src": "/upload-video",
      "dest": "/main.py",
      "methods": ["POST"]
    },
    {
      "src": "/extract-frames",
      "dest": "/main.py",
      "methods": ["POST"]
    },
    {
      "src": "/start-reconstruction", 
      "dest": "/main.py",
      "methods": ["POST"]
    },
    {
      "src": "/jobs/(.*)",
      "dest": "/main.py"
    },
    {
      "src": "/download/(.*)",
      "dest": "/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "/main.py"
    }
  ],
  "env": {
    "PYTHONPATH": "/var/task",
    "COLMAP_AVAILABLE": "false"
  },
  "functions": {
    "main.py": {
      "runtime": "python3.9",
      "maxDuration": 300
    }
  },
  "regions": ["sfo1"]
}
